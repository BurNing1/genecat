<!--pages/catMix/catMix.wxml-->
<view>
  <!--猫咪故事-->
  <view class="story">
    <view class="title">
      <text>猫咪故事</text>
      <view bindtap='turnToCatStoryMore'>查看更多</view>
    </view>
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{catStory.autoplay}}" interval="{{catStory.interval}}" duration="{{catStory.duration}}" circular="{{catStory.circular}}" skip-hidden-item-layout="{{true}}" bindchange='storyDesc'>
      <block wx:for="{{catStory.list}}" wx:key="">
        <swiper-item>
          <image src="{{item.imgUrls}}" class="slide-image" width="355" height="237" bindtap="turnToStoryDetail"/>
        </swiper-item>
      </block>
    </swiper>
    <view class="content">
      <text class="desc">{{catStoryDesc.desc}}</text>
      <view class="info">
        <view class="slave">
          <image src="{{catStoryDesc.icon}}"/>
          <text>@{{catStoryDesc.name}}</text>
        </view>
        <view class="pageview">
          <text>{{catStoryDesc.skim}}浏览</text> .
          <text>{{catStoryDesc.reply}}回复</text>
        </view>
      </view>
    </view> 
  </view>
  <!-- 猫咪头图 -->
  <view class="banner">
    <image class="pic" src="../../images/1.jpg"/>
    <image class="like"></image>
    <image class="share"></image>
    <view class="info">
      <view class="identifier">684628462733hhfu</view>
      <view class="several">初代</view>
      <image class="gender"/>
    </view>
  </view>
  <!--MTH-->
  <view class="mth">
    <view class="value">98 MTH</view>
    <navigator class="btn-get-gene" url="../geneGain/geneGain">获取基因</navigator>
  </view>
  <!--自我介绍-->
  <view class="intro">
    <view class="cat">
      <text class="title">猫咪简介：</text>
      <text class="desc">Hi,我是初代猫moko的基因合成的哦，拥有可爱的鼻子&眼睛我是初代猫moko的基因合成的哦，拥有可爱的鼻子&眼睛</text>
    </view>
    <view class="host">
      <image class="logo" src="../../images/1.jpg" bindtap="turnToOthersPage"/>
      <text>@jill</text>
      <text class="role">拥有者</text>
    </view>
  </view>
  <!--基因特性-->
  <view class="feature">
    <text>基因特性</text>
  </view> 
  <!--基因来源-->
  <view class="source">
    <text>基因来源：</text>
    <image src="../../images/1.jpg"/>
    <image src="../../images/2.jpg"/>
  </view>
  <!--基因合成 -->
  <view class="blend">
    <text>基因合成：</text>
    <image src="../../images/1.jpg"/>
    <image src="../../images/2.jpg"/>
    <image src="../../images/3.jpg"/>
    <image src="../../images/4.jpg"/>
    <image src="../../images/5.jpg"/>
    <image src="../../images/6.jpg"/>
    <image src="../../images/7.jpg"/>
    <image src="../../images/8.jpg"/>
  </view>
</view>
